@model IEnumerable<ExamenT2.Models.Tipo>

@{
    ViewBag.Title = "MostrarTodoTipo";
}

<h2>MostrarTodoTipo</h2>

<p>
    @Html.ActionLink("Create New", "CreateTipo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoID)
            </td>
