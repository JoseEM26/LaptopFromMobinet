                @Html.DisplayFor(modelItem => item.CategoriaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTipo", new { id = item.TipoID }) |
                @Html.ActionLink("Details", "DetailsTipo", new { id = item.TipoID }) |
                @Html.ActionLink("Delete", "DeleteTipo", new { id = item.TipoID })
            </td>
        </tr>
